# Продакшен переменные окружения для Docker Compose

# === БАЗОВЫЕ НАСТРОЙКИ ===
# Порты для сервисов
WEB_PORT=3000
POSTGRES_PORT=5432
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# === БАЗА ДАННЫХ ===
POSTGRES_DB=zvezdnoe_vereteno
POSTGRES_USER=zv_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# === MINIO (S3) ===
MINIO_ROOT_USER=zv_admin
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG_MINIO_PASSWORD

# === NEXTAUTH ===
# ОБЯЗАТЕЛЬНО СМЕНИТЕ НА СИЛЬНЫЙ СЛУЧАЙНЫЙ КЛЮЧ!
NEXTAUTH_SECRET=CHANGE_ME_STRONG_SECRET_KEY_AT_LEAST_32_CHARS
# Укажите ваш домен или IP
NEXTAUTH_URL=https://your-domain.com

# === EMAIL ===
EMAIL_FROM=noreply@your-domain.com
# Пример для Gmail: smtp://username:password@smtp.gmail.com:587
SMTP_URL=smtp://user:pass@smtp.example.com:587

# === TELEGRAM BOT (ОПЦИОНАЛЬНО) ===
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# === ПЛАТЕЖИ ===
# YooKassa настройки
YKS_SHOP_ID=
YKS_SECRET=

# === ОСНОВНЫЕ НАСТРОЙКИ ===
# Ваш основной URL
PUBLIC_BASE_URL=https://your-domain.com

# === FEATURE FLAGS ===
FEATURE_PAYMENTS=true
FEATURE_TELEGRAM=false
