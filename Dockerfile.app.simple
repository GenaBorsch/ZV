if [ -z "$NEXTAUTH_SECRET" ]; then
  echo "‚ùå –û—à–∏–±–∫–∞: NEXTAUTH_SECRET –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω"
  exit 1
