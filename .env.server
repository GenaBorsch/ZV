# Переменные окружения для продакшен сервера
# Скопируйте в .env.server и заполните реальными значениями

# === ПОРТЫ ===
WEB_PORT=3000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# === БАЗА ДАННЫХ (ВНЕШНЯЯ) ===
# Замените на реальные данные вашего PostgreSQL сервера
DATABASE_URL="postgresql://username:password@db-host:5432/database_name"

# === MINIO/S3 (ВНЕШНИЙ) ===
# Замените на реальные данные вашего MinIO/S3 сервера
S3_ENDPOINT="https://your-minio-server.com"
S3_ACCESS_KEY="your_access_key"
S3_SECRET_KEY="your_secret_key"
S3_BUCKET_AVATARS="avatars"
S3_BUCKET_DOCUMENTS="documents"
S3_BUCKET_UPLOADS="uploads"

# === NEXTAUTH ===
# ОБЯЗАТЕЛЬНО СМЕНИТЕ НА СИЛЬНЫЙ СЛУЧАЙНЫЙ КЛЮЧ!
NEXTAUTH_SECRET="your_super_secret_key_32_chars_minimum"
# Укажите ваш реальный домен
NEXTAUTH_URL="https://your-domain.com"

# === EMAIL ===
EMAIL_FROM="noreply@your-domain.com"
# Настройки вашего SMTP сервера
SMTP_URL="smtp://username:password@smtp.your-provider.com:587"

# === TELEGRAM BOT (ОПЦИОНАЛЬНО) ===
TELEGRAM_BOT_TOKEN=""
TELEGRAM_WEBHOOK_URL=""

# === ПЛАТЕЖИ ===
# YooKassa настройки (если используете)
YKS_SHOP_ID=""
YKS_SECRET=""

# === ОСНОВНЫЕ НАСТРОЙКИ ===
# Ваш основной URL
PUBLIC_BASE_URL="https://your-domain.com"

# === FEATURE FLAGS ===
FEATURE_PAYMENTS="true"
FEATURE_TELEGRAM="false"
